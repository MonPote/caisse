<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.ProductEntity" table="product" schema="public" catalog="entrepot">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="reference">
            <column name="reference" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="designation">
            <column name="designation" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>