<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="model.ProductEntity">
        <table name="product" schema="public" catalog="entrepot"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="reference">
                <column name="reference" length="32"/>
            </basic>
            <basic name="designation">
                <column name="designation" nullable="false" length="64"/>
            </basic>
            <basic name="quantity">
                <column name="quantity" precision="-1"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
