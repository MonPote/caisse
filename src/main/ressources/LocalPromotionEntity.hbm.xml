<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Entities.LocalPromotionEntity" table="Local_promotion" schema="Back Office" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="ref">
            <column name="Ref" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="designation">
            <column name="Designation" sql-type="char(64)" length="64"/>
        </property>
        <property name="idRegle">
            <column name="id_regle" sql-type="integer"/>
        </property>
        <property name="dateStart">
            <column name="Date_start" sql-type="date"/>
        </property>
        <property name="dateStop">
            <column name="Date_stop" sql-type="date"/>
        </property>
        <property name="recurence">
            <column name="Recurence" sql-type="boolean"/>
        </property>
    </class>
</hibernate-mapping>