<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Entities.ProductEntity" table="Product" schema="Back Office" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="ref">
            <column name="Ref" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="designation">
            <column name="Designation" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="quantite">
            <column name="Quantite" sql-type="integer"/>
        </property>
        <property name="prix">
            <column name="Prix" sql-type="integer"/>
        </property>
        <property name="stockMin">
            <column name="Stock_min" sql-type="integer"/>
        </property>
        <property name="stockMax">
            <column name="Stock_max" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>