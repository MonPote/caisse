<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Entities.ProductPromotionEntity" table="Product_promotion" schema="Back Office"
           catalog="postgres">
        <composite-id mapped="true" class="model.Entities.ProductPromotionEntityPK">
            <key-property name="idProduit">
                <column name="id_produit" sql-type="integer"/>
            </key-property>
            <key-property name="idPromotion">
                <column name="id_promotion" sql-type="integer"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>